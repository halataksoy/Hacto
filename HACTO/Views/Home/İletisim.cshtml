
@{
    ViewBag.Title = "İletisim";
    Layout = "~/Views/Shared/_SiteLayout.cshtml";
}
<section id="inner-headline">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <ul class="breadcrumb">
                    <li><a href="#"><i class="fa fa-home"></i></a><i class="icon-angle-right"></i></li>
                    <li class="active">İletişim</li>
                </ul>
            </div>
        </div>
    </div>
</section>
<section id="content">
    <div class="map">
        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3007.64385281784!2d29.01109431525375!3d41.07677697929392!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab64281346067%3A0x838a84d58c570534!2sAssembly%20%7C%20Ferko%20Signature!5e0!3m2!1str!2str!4v1648151274591!5m2!1str!2str" width="100%" height="450" style="border:0;" allowfullscreen></iframe>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-8 col-md-offset-2">
                <h4>Aşağıdaki iletişim formunu doldurarak <strong>bizimle iletişime geçin</strong></h4>

                <div class="alert alert-success">@*@ViewBag.Uyari*@</div>

                <form action="/Home/İletisim/" method="post" role="form" class="contactForm">
                    <div class="form-group">
                        <input type="text" name="adsoyad" class="form-control" id="name" placeholder="Adınız" data-rule="minlen:4" data-msg="Lütfen en az 4 karakter giriniz." required />
                        <div class="validation"></div>
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" name="email" id="email" placeholder="Mail Adresiniz" data-rule="email" data-msg="Lütfen geçerli e posta adresinizi giriniz." required />
                        <div class="validation"></div>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="konu" id="subject" placeholder="Konu" data-rule="minlen:4" required />
                        <div class="validation"></div>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="mesaj" rows="5" data-rule="required" data-msg="bizimle iletişime geçin" placeholder="Mesajınız"></textarea>
                        <div class="validation"></div>
                    </div>

                    <div class="text-center"><button type="submit" class="btn btn-theme">Gönder</button></div>

                </form>
            </div>
        </div>
    </div>
</section>